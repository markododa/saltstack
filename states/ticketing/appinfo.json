{
    "name": "ticketing",
    "description": "Platform for managing tickets, track tasks and delagate duties.",
    "version": "1.1",
    "icon": "check-circle-o",
    "dependency": "directory,monitoring",
    "substates": ["ticketing.ticketing"], 
    "services": [
    {
        "name": "VAR_HOSTNAME",
        "checks": [
        {
            "id": "ssh",
            "name": "SSH Interface",
            "tcp": "VAR_DNS:22",
            "interval": "30s",
            "timeout": "5s"
        },{
            "id": "web",
            "name": "Web Interface",
            "http": "http://VAR_DNS:80/",
            "tls_skip_verify": true,
            "method" : "POST",
            "interval": "30s",
            "timeout": "5s"
        }
        ]

    }
    ],
    
    "path": "-"
}

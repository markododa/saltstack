server_host     = {{ dcip }}
server_port     = 389
version         = 3
bind            = yes
start_tls       = yes
bind_dn         = {{ query_user }}
bind_pw         = {{ query_password }}
search_base     = {{ search_base }}
scope           = sub
query_filter    = (&(objectclass=person)(userPrincipalName=%s))
result_attribute= userPrincipalName
result_format   = %d/%u/Maildir/
debuglevel      = 0

{
    "name": "email",
    "description": "E-mail server with web interface and support for all popular mail clients.",
    "version": "1.2",
    "icon": "fa-envelope",
    "dependency": "directory,monitoring",
    "substates" : ["email"],
    "fields": [
            {"type": "text", "name": "mail_domain", "label": "Domain for emails"},
            {"type": "text", "name": "username", "label": "Username"},
            {"type": "password", "name": "password", "label": "Password"}
        ],
    "services": [
    {
        "name": "VAR_HOSTNAME",
        "checks": [
        {
            "id": "ssh",
            "name": "SSH Interface",
            "tcp": "VAR_DNS:22",
            "interval": "30s",
            "timeout": "5s"
        },{
            "id": "imap",
            "name": "IMAP Secure",
            "tcp": "VAR_DNS:993",
            "interval": "30s",
            "timeout": "5s"
        },{
            "id": "pop",
            "name": "POP Secure",
            "tcp": "VAR_DNS:995",
            "interval": "30s",
            "timeout": "5s"
        },{
            "id": "smtp",
            "name": "SMTP Secure",
            "tcp": "VAR_DNS:587",
            "interval": "30s",
            "timeout": "5s"
        },{
            "id": "web",
            "name": "Web Interface",
            "http": "https://VAR_DNS:443",
            "tls_skip_verify": true,
            "method" : "POST",
            "interval": "30s",
            "timeout": "5s"
        }
        ]

    }
    ],
    "path": "-",
    "panels": {"admin": [{"key": "email.users", "name": "email users"},{"key": "email.queue", "name": "Queue"},{"key": "email.filters", "name": "Filters"},{"key": "email.logs", "name": "Logs"}], "user": []}
}

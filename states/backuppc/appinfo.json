{
    "name": "backup",
    "description": "Create automatic daily and weekly backups of all critical data across the network.",
    "version": "1.1",
    "icon": "fa-database",
    "dependency": "monitoring",
    "substates" : ["backuppc"],
    "module" : "backuppc",
    "services": [
    {
        "name": "VAR_HOSTNAME",
        "checks": [
        {
            "id": "ssh",
            "name": "SSH Interface",
            "tcp": "VAR_DNS:22",
            "interval": "30s",
            "timeout": "5s"
        },{
            "id": "web",
            "name": "Web Interface",
            "http": "http://VAR_DNS:80",
            "tls_skip_verify": true,
            "method" : "POST",
            "interval": "30s",
            "timeout": "5s"
        }
        ]

    }
    ],
    "path": "-",
    "panels": {"admin": [{"key": "backup.hosts", "name": "Manage sources"},{"key": "backup.manage", "name": "Manage paths"}, {"key": "backup.browse", "name": "Browse backups"}, {"key": "backup.overview", "name": "Overview"}], "user": []}
}
